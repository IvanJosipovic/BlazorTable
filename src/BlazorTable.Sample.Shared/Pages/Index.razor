@page "/"
@inject HttpClient Http
@using BlazorTable
@using System.ComponentModel

<h1>BlazorTable</h1>

<a href="https://github.com/IvanJosipovic/BlazorTable"><img alt="GitHub stars" src="https://img.shields.io/github/stars/IvanJosipovic/BlazorTable?style=social"></a>
